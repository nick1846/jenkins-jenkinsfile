pipeline {
    environment {
               dockerImage = ''
    }
    agent any

    stages {
        stage('1-Clone') {
            steps {
                echo "Start of Stage Clone"
				echo "Cloning......."
				git credentialsId: 'id_github', url: 'git@github.com:nick1846/jenkins-dockerfile.git'
				echo "End of Stage Clone"
            }
        }
        stage('2-Build') {
            steps {
                echo "Start of Stage Build"
			    echo "Building......."
			    script {
                    dockerImage = docker.build("nick1846/my-php") 
			    }        
			    echo "End of Stage Build"
                
            }
        }
        stage('3-Push') {
            steps {
                echo "Start of Stage Push"
			    echo "Pushing......."
			    script {
                    docker.withRegistry( '', 'id_dockerhub' ) {
                    dockerImage.push('latest')
                    }
                }
			    echo "End of Stage Push"
            }
        }
    }
}
